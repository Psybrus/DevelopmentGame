{

	"resources" : [
		{
			"name"		:		"TestEntity",
			"type"		:		"ScnEntity",

			"components" : [
				{
					"$Class"				: "GaTestShaderComponent",
					"type"					: "GaTestShaderComponent",

					"material"				: "$(ScnMaterial:this.material)"
				}
			]
		},

		{
			"type"			: "ScnShader",
			"name"			: "pp_deferred_resolve",
			"sources" 		: {
				"GLSL_430" : "Content/Engine/pp_deferred_resolve.psf",
				"GLSL_330" : "Content/Engine/pp_deferred_resolve.psf"//,
				//"GLSL_ES_100" : "Content/Engine/pp_deferred_resolve.psf"
			},

			"includepermutations" : [
				"RENDER_POST_PROCESS",
				"PASS_TRANSPARENT",
				"MESH_STATIC_2D",
				"LIGHTING_NONE"
			],

			"excludepermutations" : [
			],

			"entrypoints"		: {
				"vertex" : 		"vertexMain",
				"pixel" :		"pixelMain"
			}
		},

		{
			"type"			: "ScnShader",
			"name"			: "geometry_test",
			"sources" 		: {
				"D3D11_4_0" : "Content/Engine/geometry_test.psf",
				"GLSL_430" : "Content/Engine/geometry_test.psf",
				"GLSL_330" : "Content/Engine/geometry_test.psf",
				"GLSL_ES_100" : "Content/Engine/geometry_test.psf"
			},

			"@(android)" : {
				"sources" 		: {
					"GLSL_ES_100" : "Content/Engine/geometry_test.psf"
				}
			},

			"@(html5)" : {
				"sources" 		: {
					"GLSL_ES_100" : "Content/Engine/geometry_test.psf"
				}
			},

			"includepermutations" : [
				"RENDER_FOWARD",
				"RENDER_DEFERRED",
				"MESH_STATIC_3D",
				"LIGHTING_NONE"
			], 

			"entrypoints"		: {
				"vertex" : 		"vertexMain",
				// "geometry" :	"geometryMain",
				"pixel" :		"pixelMain"
			},

			"@(android)" : {
				"entrypoints"		: {
					"vertex" : 		"vertexMain",
					"pixel" :		"pixelMain"
				}
			}
		},

		{
			"type"			: "ScnMaterial",
			"name"			: "material",

			// Shader
			"shader"		: "$(ScnShader:this.geometry_test)",

			// Textures
			"textures"		: {
			},

			// Samplers
			"samplers"		: {
			},

			// New render state.
			"renderstate" : {
				"blendstate" : {
					"rendertarget" : [
						{
							"enable" : false,
							"writemask" : 15
						}
					]
				},

				"depthstencilstate" : {
					"depthtestenable" : false,
					"depthwriteenable" : false,
					"depthfunc" : "lessequal",
					"stencilenable" : false
				},

				"rasteriserstate" : {
					"fillmode" : "wireframe",
					"cullmode" : "none",
					"depthclipenable" : true,
					"antialiasedlineenable" : false
				}
			}
		}
	]
}
