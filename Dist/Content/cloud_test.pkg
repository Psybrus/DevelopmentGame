{

	"resources" : [
		{
			"name"		:		"TestEntity",
			"type"		:		"ScnEntity",

			"components" : [
				{
					"$Class" : "GaTestCloudComponent",

					"material3d" : "$(ScnMaterial:this.cloud_material)"
				}
			]
		},

		{
			"type"			: "ScnMaterial",
			"name"			: "cloud_material",

			// Shader
			"shader"		: "$(ScnShader:this.cloud_shader)",

			// Textures
			"textures"		: {
			},

			// Samplers
			"samplers"		: {
				"aDiffuseTex"	: {
					"addressu" : "wrap",
					"addressv" : "wrap",
					"addressw" : "wrap",
					"minfilter" : "linear",
					"magfilter" : "linear"
				}
			},

			// New render state.
			"renderstate" : {
				"blendstate" : {
					"rendertarget" : [
						{
							"enable" : true,
							"srcblend" : "srcalpha",
							"destblend" : "one",
							"blendop" : "add",
							"srcblendalpha" : "srcalpha",
							"destblendalpha" : "one",
							"blendopalpha" : "add",
							"writemask" : 15
						}
					]
				},

				"depthstencilstate" : {
					"depthtestenable" : false,
					"depthwriteenable" : false,
					"depthfunc" : "lessequal",
					"stencilenable" : false
				},

				"rasteriserstate" : {
					"fillmode" : "solid",
					"cullmode" : "none",
					"depthclipenable" : true,
					"antialiasedlineenable" : false
				}
			}
		},

		{
			"type"			: "ScnShader",
			"name"			: "cloud_shader",
			"sources" 		: {
				//"D3D11_4_0" : "Engine/cloud_test.psf",
				"ESSL_100" : "Engine/cloud_test.psf",
				"GLSL_430" : "Engine/cloud_test.psf",
				"GLSL_330" : "Engine/cloud_test.psf"
			},

			"excludepermutations" : [
				"RENDER_DEFERRED",
				"PASS_SHADOW",
				"MESH_INSTANCED_3D"
			],

			"entrypoints"		: {
				"vertex" : 		"vertexMain",
				"pixel" :		"pixelMain"
			}
		}
	]
}
