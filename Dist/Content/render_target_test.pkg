{

	"resources" : [
		{
			"name"		:		"TestEntity",
			"type"		:		"ScnEntity",

			"components" : [
				{
					"$Class"				: "ScnModelComponent",
					"name"					: "TestModel",
					"model"					: "$(ScnModel:ruiner.character_jacketmale)",
					"rendermask"			: 2,
					"scale"					: "0.1, 0.1, 0.1"
				},

				{
					"$Class"				: "ScnPostProcessComponent",
					"rendermask"			: 2,

					"nodes"					: [
						// Copy into downsample buffer.
						{
							"inputtextures" : {
								"aInputTexture0" : "$(ScnTexture:textures.test_rt)"
							},

							"inputsamplers" : {
								"aInputTexture0" : {
									"addressu" : "clamp",
									"addressv" : "clamp",
									"minfilter" : "linear",
									"magfilter" : "linear"
								}
							},

							"outputtextures" : {
								"0" : "$(ScnTexture:pp_textures.pp_downscale_0)"
							},

							"shader" : "$(ScnShader:pp_shaders.pp_copy)",
							"renderstate" : {}
						},

						// H blur.
						{
							"inputtextures" : {
								"aInputTexture0" : "$(ScnTexture:pp_textures.pp_downscale_0)"
							},

							"inputsamplers" : {
								"aInputTexture0" : {
									"addressu" : "clamp",
									"addressv" : "clamp",
									"minfilter" : "linear",
									"magfilter" : "linear"
								}
							},

							"outputtextures" : {
								"0" : "$(ScnTexture:pp_textures.pp_working_0)"
							},

							"uniforms" : [
								{	
									"name" : "ScnShaderPostProcessConfigData",
									"data" : {
										"$Class" : "ScnShaderPostProcessConfigData"
									}
								},
								{
									"name" : "ScnShaderPostProcessBlurBlockData",
									"data" : {
										"$Class" : "ScnShaderPostProcessBlurBlockData",
										"texturedimensions" : "0.0, 0.0, 0.0, 0.0",
										"radius" : 4.0
									}
								}
							],

							"shader" : "$(ScnShader:pp_shaders.pp_h_blur)",
							"renderstate" : {}
						},

						// V blur.
						{
							"inputtextures" : {
								"aInputTexture0" : "$(ScnTexture:pp_textures.pp_working_0)"
							},

							"inputsamplers" : {
								"aInputTexture0" : {
									"addressu" : "clamp",
									"addressv" : "clamp",
									"minfilter" : "linear",
									"magfilter" : "linear"
								}
							},

							"outputtextures" : {
								"0" : "$(ScnTexture:pp_textures.pp_working_1)"
							},

							"uniforms" : [
								{	
									"name" : "ScnShaderPostProcessConfigData",
									"data" : {
										"$Class" : "ScnShaderPostProcessConfigData"
									}
								},
								{
									"name" : "ScnShaderPostProcessBlurBlockData",
									"data" : {
										"$Class" : "ScnShaderPostProcessBlurBlockData",
										"texturedimensions" : "0.0, 0.0, 0.0, 0.0",
										"radius" : 4.0
									}
								}
							],

							"shader" : "$(ScnShader:pp_shaders.pp_v_blur)",
							"renderstate" : {}
						},

						// Upsample back to framebuffer.
						{
							"inputtextures" : {
								"aInputTexture0" : "$(ScnTexture:pp_textures.pp_working_1)"
							},

							"inputsamplers" : {
								"aInputTexture0" : {
									"addressu" : "clamp",
									"addressv" : "clamp",
									"minfilter" : "linear",
									"magfilter" : "linear"
								}
							},

							"outputtextures" : {
								"0" : "$(ScnTexture:textures.test_rt)"
							},

							"shader" : "$(ScnShader:pp_shaders.pp_copy)",
							"renderstate" : {}
						}
					]
				},

				{
					"$Class"				: "GaFullscreenQuadComponent",
					"material"				: "$(ScnMaterial:materials.test_rt)",
					"rendermask"			: 1
				}
			]
		}
	]
}
